        <script is:inline>
            function setLanguage(lang) {
                document.body.classList.remove('lang-en', 'lang-de');
                document.body.classList.add(`lang-${lang}`);
                localStorage.setItem('onette-lang', lang);
                
                document.querySelectorAll('.lang-toggle').forEach(btn => {
                    if (btn.dataset.lang === lang) {
                        btn.classList.add('font-bold', 'text-primary');
                        btn.classList.remove('font-normal', 'text-ink/50');
                    } else {
                        btn.classList.remove('font-bold', 'text-primary');
                        btn.classList.add('font-normal', 'text-ink/50');
                    }
                });
            }

            document.addEventListener('DOMContentLoaded', () => {
                const saved = localStorage.getItem('onette-lang') || 'en';
                setLanguage(saved);

                document.querySelectorAll('.lang-toggle').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        e.preventDefault();
                        setLanguage(btn.dataset.lang);
                    });
                });

                // Hero carousel
                const heroSlides = document.querySelectorAll('.hero-slide');
                if (heroSlides.length > 1) {
                    let current = 0;
                    setInterval(() => {
                        heroSlides[current].style.opacity = '0';
                        current = (current + 1) % heroSlides.length;
                        heroSlides[current].style.opacity = '1';
                    }, 5000);
                }

                // Food carousel
                const foodSlides = document.querySelectorAll('.food-slide');
                if (foodSlides.length > 1) {
                    let current = 0;
                    setInterval(() => {
                        foodSlides[current].style.opacity = '0';
                        current = (current + 1) % foodSlides.length;
                        foodSlides[current].style.opacity = '1';
                    }, 4000);
                }

                // Testimonials carousel
                const track = document.getElementById('testimonials-track');
                if (track) {
                    let paused = false;
                    track.addEventListener('pointerdown', () => paused = true);
                    track.addEventListener('pointerup', () => setTimeout(() => paused = false, 3000));
                    setInterval(() => {
                        if (paused) return;
                        const card = track.querySelector('.snap-center');
                        const w = card ? card.offsetWidth + 32 : 300;
                        const max = track.scrollWidth - track.clientWidth;
                        if (track.scrollLeft >= max - 10) {
                            track.scrollTo({ left: 0, behavior: 'smooth' });
                        } else {
                            track.scrollBy({ left: w, behavior: 'smooth' });
                        }
                    }, 4000);
                }
            });
        </script>
